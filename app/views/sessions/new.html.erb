<br>
<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <div class="container">
        <div class="row">
          <div class="col-md-4">
          </div>
          <div class="col-md-4">
            <legend>Please Log In</legend>
            <div class="row">
                <%= text_field_tag :name, params[:name], placeholder: "Name" %>
            </div>
            <br>
            <div class="row">
                <%= password_field_tag :password, params[:password], placeholder: "Password" %>
            </div>
            <br>
            <div>
              <%= submit_tag "Login", class:"btn btn-default" %>
              <button type="button" onclick="location.href = '/users/new';" class="btn btn-default">Sign up</button>
            </div>
          </div>
          <div class="col-md-4">
          </div>
        </div>

    </fieldset>
  <% end %>
</div>
