<%= stylesheet_link_tag "boards", media: "all", "data-turbolinks-track" => "reload" %>

<body>
  <div class = "container">
    <ol class="breadcrumb">
      <li class="active">Threads</li>
    </ol>
    <h1>Forum Page</h1>
  </div>
  <div class = "container">
    <div id="the_table">
      <table class = "table table-bordered table-striped">
      <thead>
          <tr>
            <th width="60%"> Forum Boards </th>
            <th width="20%"> Last Post </th>
          </tr>
      </thead>
      <% for board in @boards %>
        <tr>
          <td><h4><%= link_to (board.name), board_lines_path(board)  %></h4>
            <%= board.description %></td>
          <td class="right"></td>
    <!--       <td><%= link_to "Show", board %></td>
     -->    
        </tr>
      <% end %>
      </table>
    </div>
    <br></br>
  </div>
</body>
