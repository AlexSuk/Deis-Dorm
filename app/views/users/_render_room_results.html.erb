<%= stylesheet_link_tag "users", media: "all", "data-turbolinks-track" => "reload" %>

<div class = "row">
	<br></br>
    <h2> Your Ideal Room Matches: </h2>
</div>
<br>
<div class = "row">
	<div class ="a_table">
		<table class = "table table-bordered table-striped">
			<thead>
			    <tr>
			      <th> Room# </th>
			      <th> Quad </th>
			      <th> Building </th>
			      <th> Positive(s)</th>
			      <th> Negative(s)</th>
			    </tr>
			</thead>

			<tbody>
			    <% @rooms.each do |room| %>
			      <tr>
			        <td><%= link_to room.number, room_path(room.id) %></td>
			        <td><%= link_to @quads[@rooms.index(room)].name, quad_path(@quads[@rooms.index(room)].id) %></td>
			        <td><%= link_to @buildings[@rooms.index(room)].name, quad_building_path(@quads[@rooms.index(room)].id,@buildings[@rooms.index(room)].id) %></td>
			        <td><%= @positives[@rooms.index(room)] %></td>
			        <td><%= @negatives[@rooms.index(room)] %></td>
			      </tr>
			    <% end %>
			</tbody>
		</table>
	</div>
</div>