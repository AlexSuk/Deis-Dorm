<div class="container">
  <div class="col-md-3" style="padding-right: 100px;">
    <div class="row">
      <td><%= image_tag @user.icon.url(:square) %></td>
    </div>
    <div class="row">
      <h3> <%= @user.user_name %> </h3>
    </div>
    <div class="row">
      <%= form_for(@user, multipart: true) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.file_field :icon %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row">
      <h3>Bio</h3>
    </div>
    <div class="row">
      <%=@user.bio%>
    </div>
    <div class="row">
      <h1>Personal Preferences</h2>
    </div>
  </div>
</div>
