<h1>We are at the Show Page</h1>


<p>
  <strong>Title:</strong>
  <%= @line.name %>
</p>

<p>
  <strong>Text:</strong>
  <%= @line.description %>
</p>

 <h2>Comments</h2>
<%= render @line.posts %>

<h2>Add a comment:</h2>
<%= form_for([@board, @line, @line.posts.build], multipart: true), do |f| %>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_board_line_path(@board, @line) %> |
<%= link_to 'Back', board_lines_path %>
