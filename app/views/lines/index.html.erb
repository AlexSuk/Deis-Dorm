<h1>Listing articles</h1>
 
 <%= link_to 'New Post', new_board_line_path(@board) %>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @topics.each do |topic| %>
    <tr>
      <td><h5><%= link_to (topic.name), board_line_url(@board, topic)  %></h5>
      <% user = User.find_by(id: topic.user_id) %>
      By: <%= user.user_name %> </td>
      <td><%= topic.description %></td>
      
      
    </tr>
  <% end %>
</table>

<%= link_to 'Back', boards_path %>