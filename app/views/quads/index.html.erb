<%= stylesheet_link_tag "quads" %>

<div class="container-fluid">
  <div class="row">
    <%#= form_tag(do_search_quads_path, method: "get", remote: true, role: "form", class: "form") do %>

    <div class="input-group">
      <input name="keywords" type="text"  class="form-control" placeholder="Keywords for quads, buildings, rooms, etc."/>
      <span class="input-group-addon">
        <%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-search pull-right" %>
      </span>
    </div>
    <%# end %>
  </div>

  <div class="col-md-2">
    <%= form_tag(do_filter_quads_path, method: "get", remote: true, role: "form", class: "form") do %>
      <h4>Room type</h4>
      <% ["Single", "Double", "Suite"].each do |roommate| %>
        <%= check_box_tag "a[]", roommate, true, {:multiple => true} %>
        <span><%=roommate%></span>
        <br>
      <% end %>
      <h4>Price</h4>
      <% ["6,000-6,999", "7,000-7,999", "8,000-8,999"].each do |price| %>
        <%= check_box_tag "b[]", price, true, {:multiple => true} %>
        <span><%=price%></span>
        <br>
      <% end %>

      <%= submit_tag "Update", class: "form_submit" %>
    <% end %>
  </div>

  <div class="col-md-10">
    <div class="row class-year">
      <h3>Freshman</h3>
      <div class="media">
        <div class="media-left media-top" style="padding-right: 10px;">
          <%= image_tag "https://s3.amazonaws.com/deis-dorms-devel/pictures/static/buildings/9.jpg", class: "media-object", size:"175x131"%>
        </div>
        <div class="media-body">
          <% @quad_buildings.each do |q, b| %>
            <% if q.years[0] == "1" %>
              <h4 class="media-heading"><%= link_to q.name, quad_path(q.id)%></h4>
              <div class="media-sub-heading" >
                <span class="building-link">| </span>
                <% b.each do |build| %>
                  <span class="building-link"><%= link_to build.name, quad_building_path(q.id, build.id) %> | </span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row class-year">
      <h3>Sophomore</h3>
